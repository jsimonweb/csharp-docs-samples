@model PlanetAuction.ViewModels.HomeIndex

<H1>Planet Auction - Cloud Spanner Sample</H1>

    <form asp-controller="Home" asp-action="Index" id="TextForm">
        <label for="content">Insert a Player Name:</label><br />
        <input type="text" id="content" name="content" asp-for="Content"><br />
        <input type="hidden" id="playerId" name="playerId" asp-for="PlayerId" value="@Model.PlayerId">
        <button id="Submit" type="submit">Get Planet Share</button>
    </form>
    @if (Model.SavedNewContent)
    {

        <div>@Model.Status</div>
    }
    @if (!string.IsNullOrEmpty(Model.PlayerId))
    {
            <p>Player ID: @Model.PlayerId</p>
    }

